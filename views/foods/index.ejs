<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>My Pantry</title>
</head>
<body>
  <%- include('../partials/_navbar.ejs') %>
  <h1>My Pantry </h1>

  <p><a href="/users/<%= userId %>/foods/new">Add something tasty</a></p>

  <% if (pantry && pantry.length) { %>
    <ul>
      <% pantry.forEach(item => { %>
        <li>
          <a href="/users/<%= userId %>/foods/<%= item._id %>"><%= item.name %></a>
          <a href="/users/<%= userId %>/foods/<%= item._id %>/edit">Edit</a>
          <form action="/users/<%= userId %>/foods/<%= item._id %>?_method=DELETE" method="POST" style="display:inline">
            <button type="submit">Delete</button>
          </form>
        </li>
      <% }) %>
    </ul>
  <% } else { %>
  <p>brokie alert : empty pantry</p>
  <% } %>
</body>
</html>
